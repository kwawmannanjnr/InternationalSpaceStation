<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp"
    android:background="@android:color/transparent"
    xmlns:font="http://schemas.android.com/apk/res-auto">

            <RelativeLayout
                android:id="@+id/item_layout"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="3dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/wizard_shadow01" />


                <RelativeLayout
                    android:id="@+id/itemDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_marginLeft="23dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/imageview_border"/>

                    <ImageView
                        android:id="@+id/weather_imgView"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:src="@drawable/splash_screen"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="14dp"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shipperDisplay"
                        android:layout_toRightOf="@+id/weather_imgView">


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/itemDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </RelativeLayout>

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="21dp"
                    android:layout_marginTop="21dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Duration"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/risetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/itemDetails"
                    android:layout_alignEnd="@+id/duration"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="@string/risetimetxt"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />
            </RelativeLayout>

</RelativeLayout>